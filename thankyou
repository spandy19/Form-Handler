<body>
  <div class="thank-you">
    <h1>Thank You!</h1>
    <p>For sharing your details and downloading:</p>
    <p class="asset-title" id="assetTitle">Loading...</p>
    <p>The details are shared in the email id provided.</p>
  </div>

  <script>
    (function() {
      const params = new URLSearchParams(window.location.search);
      const title = params.get("asset");
      const assetElement = document.getElementById("assetTitle");

      if (title) {
        const decoded = decodeURIComponent(title);
        assetElement.textContent = `"${decoded}"`;
        document.title = `Thank You - ${decoded}`;
      } else {
        assetElement.textContent = '"Your Requested Asset"';
      }
    })();
  </script>
</body>
